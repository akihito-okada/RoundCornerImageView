<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:young="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorAccent" >

    <com.young.roundcornerviews.RoundCornerConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        tools:context=".MainActivity"
        young:cornerRadius="8dp"
        young:targetCorner="all">

        <com.young.roundcornerviews.RoundCornerImageView
            android:id="@+id/user_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            young:cornerRadius="8dp"
            young:targetCorner="left"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/lbl_hello_world"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/user_image"
            app:layout_constraintBottom_toBottomOf="@+id/user_image"
            app:layout_constraintStart_toEndOf="@+id/user_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.young.roundcornerviews.RoundCornerBorderView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            young:cornerRadius="8dp"
            young:targetCorner="all"
            young:strokeWidth="1dp"
            young:strokeColor="@color/colorPrimaryDark"/>

    </com.young.roundcornerviews.RoundCornerConstraintLayout>

</FrameLayout>